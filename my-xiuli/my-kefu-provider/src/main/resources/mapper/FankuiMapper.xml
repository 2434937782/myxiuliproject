<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kgc.mapper.FankuiMapper">
    <select id="getAllFankui" resultType="com.kgc.pojo.Fankui">
        SELECT * FROM fankui
    </select>

    <update id="update" parameterType="com.kgc.pojo.Fankui">
        UPDATE fankui SET Fkhui=#{Fkhui} WHERE Fkid=#{Fkid}
    </update>

    <select id="getById" resultType="com.kgc.pojo.Fankui">
        SELECT * FROM fankui WHERE Fkid=#{id}
    </select>
</mapper>  